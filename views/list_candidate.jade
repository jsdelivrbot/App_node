extend layout
block content
  .row.dra(style ="padding-top: 100px")
    .col-md-offset-3.col-md-6
      table(class ="table table-striped")
        thead(class="")
          tr(class="row")
            th(class="col-md-8") Nome do Candidato
            th(class="col-md-4") Remover Candidato
        tbody
          each value in lista.nome
            tr(class="row")
              th(class="col-md-8") #{value}
              th(class="col-md-4")
                span(class="fa fa-times", style="color:red; padding-left:50%", aria-hidden="true")
  
